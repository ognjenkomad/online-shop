<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Street</th>
      <th>Street number</th>
      <th>Town</th>
      <th>State</th>
      <th>Post code</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.street %></td>
        <td><%= address.street_number %></td>
        <td><%= address.town %></td>
        <td><%= address.state %></td>
        <td><%= address.post_code %></td>
        <td><%= address.user %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path %>
