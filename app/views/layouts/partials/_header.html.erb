<header class="blog-header py-3">
  <div class="row flex-nowrap justify-content-between align-items-center">
    <div class="col-md-4 justify-content-end align-items-center">
      <% if current_user.present? %>
        <p><%= link_to current_user.first_name, edit_user_path(current_user) %></p>
      <% end %>
    </div>
    <div class="col-4 text-center">
      <h3>
        <a class="blog-header-logo text-dark" href="/">Online Store</a>
      </h3>
    </div>
    <div class="col-4 d-flex justify-content-end align-items-center">
      <% if current_user.present? %>
        <% if !current_user.admin %>
          <%= total_cart_items %><%= link_to '', shopping_cart_path(current_user, @cart), class: 'fa fa-shopping-cart mr-1', style:"color:#ffc107; font-size:23px" %>
        <% else %>
          
        <% end %>
        <%= link_to "Logout", logout_path, method: :destroy, class: 'btn btn-sm btn-outline-primary ml-2' %>
      <% else %>
        <%= link_to "Register", signup_path, class: 'btn btn-sm btn-outline-primary' %>
        <%= link_to "Login", login_path, class: 'btn btn-sm btn-outline-primary ml-1'  %>
      <% end %>
    </div>
  </div>
  
</header>