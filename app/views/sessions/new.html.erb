<div class="text-center mt-5">
  <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
  <%= form_for(:session, url: login_path, html: { class: 'form-signin'}) do |f| %>
    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email, class: 'form-control mb-1', placeholder: 'Email address' %>

    <%= f.label :password, class: 'sr-only' %>
    <%= f.password_field :password, class: 'form-control mb-5', placeholder: 'Password' %>
    <%= f.submit 'Login', class: 'btn btn-lg btn-primary btn-block' %>
  <% end %>
</div>
